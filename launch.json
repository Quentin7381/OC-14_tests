{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003, // Ensure this matches your Xdebug configuration
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}" // Adjust based on your setup
            }
        },
        {
            "name": "Run PHPUnit Tests",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/vendor/bin/phpunit", // Path to PHPUnit
            "args": [
                "--configuration",
                "${workspaceFolder}/phpunit.xml" // Path to your PHPUnit configuration file
            ],
            "cwd": "${workspaceFolder}",
            "port": 9003 // Ensure this matches your Xdebug configuration
        }
    ]
}
